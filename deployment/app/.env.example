# ============================================
# Tenant Application Configuration
# ============================================
# Generated by provision-tenant.sh
# Each company deployment gets unique values
# ============================================

# ==========================================
# COMPANY IDENTIFICATION (Required)
# ==========================================
# Unique slug for this company (lowercase, no spaces)
# Used for database name, bucket name, container name
COMPANY_SLUG=acme-limo

# ==========================================
# DATABASE (Generated by provision-tenant.sh)
# ==========================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://acme_limo:generated_password@your-server:5432/acme_limo_db

# ==========================================
# OBJECT STORAGE (Generated by provision-tenant.sh)
# ==========================================
MINIO_ENDPOINT=http://your-server:9000
MINIO_ACCESS_KEY=acme_limo_access_key
MINIO_SECRET_KEY=generated_secret_key
MINIO_BUCKET=acme-limo-uploads
MINIO_USE_SSL=false

# ==========================================
# SECURITY (Required)
# ==========================================
# Generate with: openssl rand -base64 32
SESSION_SECRET=CHANGE_ME_generate_unique_per_tenant

# ==========================================
# APPLICATION (Required)
# ==========================================
APP_PORT=5000
APP_DOMAIN=acme-limo.example.com

# ==========================================
# PAYMENT - STRIPE (Optional)
# ==========================================
# Each company can have their own Stripe account
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
VITE_STRIPE_PUBLIC_KEY=

# ==========================================
# EMAIL - SMTP (Optional)
# ==========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM_NAME=ACME Limo Service
EMAIL_FROM_ADDRESS=

# ==========================================
# SMS - TWILIO (Optional)
# ==========================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ==========================================
# APIS (Optional)
# ==========================================
TOMTOM_API_KEY=
RAPIDAPI_KEY=
